@{
    ViewBag.Title = "Manage Paying Entities";
}

@*@Scripts.Render("~/bundles/angular/generalService")
    @Scripts.Render("~/bundles/settings/payingEntity")*@

@section Styles {
    <link href="~/Content/tagInput/taginput.css" rel="stylesheet" />
    <style>
        #tags {
            border: 1px solid #ccc;
            padding: 5px;
        }

            #tags > span {
                display: block;
                float: left;
                color: rgba(0, 0, 0, 0.71);
                background: rgba(128, 128, 128, 0.43);
                padding: 5px;
                padding-right: 25px;
                margin: 4px;
            }
    </style>
}


@section Scripts{
    <script src="~/Scripts/PageScripts/Settings/GeneralService.js"></script>
    <script src="~/Scripts/PageScripts/Settings/PayingEntityManager.js"></script>
    <script src="~/Scripts/PageScripts/Settings/PayingEntitiesController.js"></script>
    <script src="~/Scripts/tagInput/taginput.js"></script>
}

<div ng-controller="PayingEntityController" ng-init="initialize()">
    <div class="row mbl">
        <div class="col-lg-12 col-md-12">
            <a class="btn btn-primary btn-sm pull-right" href="javascript:void(0)" ng-click="newPayingEntityDialog()"><i class="fa fa-plus"></i> Add Paying Entity</a>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-12 col-md-12">
            @Html.Partial("~/Views/Settings/PayingEntities/pvListPayingEntities.cshtml")
        </div>
    </div>
</div>