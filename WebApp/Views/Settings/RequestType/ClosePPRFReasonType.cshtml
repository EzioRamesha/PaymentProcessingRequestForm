
<div class="panel panel-grey">
    <div class="panel-heading">
        Close PPRF Request Type
    </div>
    <div class="panel-body pan">
        <div class="text-center" ng-if="!ClosePPRFReasonTypes.length">
            <span class="info">
                No Departments added.
            </span>
        </div>
        <table class="table table-hover table-striped table-bordered" ng-if="ClosePPRFReasonTypes.length">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Description</th>                  
                    <th>Active</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <tr ng-repeat="ClosePPRFReasonType in ClosePPRFReasonTypes">
                    <td>{{$index + 1}}.</td>
                    <td>{{ClosePPRFReasonType.Description}}</td>
                   
                    <td>{{ClosePPRFReasonType.IsEnabled ? "Active" : "De-active"}}</td>
                    <td>
                        <a href="javascript:void(0)" class="btn btn-primary btn-xs" title="Edit Country" ng-click="editClosePPRFReasonTypesDialog(ClosePPRFReasonType)"><i class="fa fa-edit"></i></a> |
                        <a href="javascript:void(0)" class="btn btn-success btn-xs" title="Activate" ng-if="!ClosePPRFReasonType.IsEnabled" ng-click="ClosePPRFReasonTypesEnable(ClosePPRFReasonType)"><i class="fa fa-check"></i></a>
                        <a href="javascript:void(0)" class="btn btn-danger btn-xs" title="Deactivate" ng-if="ClosePPRFReasonType.IsEnabled" ng-click="ClosePPRFReasonTypesDisable(ClosePPRFReasonType)"><i class="fa fa-remove"></i></a>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
</div>

