
            <div class="panel panel-grey">
                <div class="panel-heading">
                    Departments
                </div>
                <div class="panel-body pan">
                    <div class="text-center" ng-if="!Departments.length">
                        <span class="info">
                            No Departments added.
                        </span>
                    </div>
                    <table class="table table-hover table-striped table-bordered" ng-if="Departments.length">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Name</th>
                                <th>Code</th>
                                <th>Description</th>
                                <th>PayingEntities</th>

                                <th>Active</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr ng-repeat="Department in Departments">
                                <td>{{$index + 1}}.</td>
                                <td>{{Department.Name}}</td>
                                <td>{{Department.Code}}</td>
                                <td>{{Department.Description}}</td>
                                <td>{{Department.PayingEntities}}</td>

                                <td>{{Department.IsEnabled ? "Active" : "De-active"}}</td>
                                <td>
                                    <a href="javascript:void(0)" class="btn btn-primary btn-xs" title="Edit Country" ng-click="editCountryDialog(Department)"><i class="fa fa-edit"></i></a> |
                                    <a href="javascript:void(0)" class="btn btn-success btn-xs" title="Activate" ng-if="!Department.IsEnabled" ng-click="enable(Department)"><i class="fa fa-check"></i></a>
                                    <a href="javascript:void(0)" class="btn btn-danger btn-xs" title="Deactivate" ng-if="Department.IsEnabled" ng-click="disable(Department)"><i class="fa fa-remove"></i></a>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        

