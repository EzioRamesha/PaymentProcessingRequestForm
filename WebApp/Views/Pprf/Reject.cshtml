@model WebApp.DAL.Models.ApproveRejectRequestModel
@{

    Layout = null;

}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/js/bootstrap.bundle.min.js"></script>
   
</head>
<body>
    <style type="text/css">
        .mydrowpdownstyle {
            width: 98%;
            margin: 15px 0px 15px 0px;
            min-height: 43px;
           
        }
    </style>

    <div>
        @using (Html.BeginForm("Reject", "Pprf", FormMethod.Post))
        {
            <div class="container mt-5">
                <div class="row">
                    <div class="col-sm-4">

                    </div>
                    <div class="col-sm-4">
                        <label><strong>Reason for rejection</strong></label>
                        <br />
                        <br />
                        @Html.DropDownList("reason", ViewBag.RejectReasons as SelectList, "select", new { Class = "mydrowpdownstyle", required = (string)null })

                    </div>
                    <div class="col-sm-4">
                    </div>
                </div>
                <br />
                <div class="row">
                    <div class="col-sm-4">

                    </div>
                    <div class="col-sm-4">
                        <label>Remarks:</label>
                        <br />
                        <textarea name="remark" id="remark" style="resize:none;" class="text-align: center;" required="required" cols="50" rows="4"></textarea>
                    </div>
                    <div class="col-sm-4">
                    </div>
                </div>
                <div class="row">
                    <div class="col-sm-4">

                    </div>
                    <div class="col-sm-4">
                        <input type="submit" class="text-align: center;" value="Submit" />
                    </div>
                    <div class="col-sm-4">
                        @Html.HiddenFor(m => m.token)
                        @Html.HiddenFor(m => m.v)
                    </div>
                </div>
            </div>
        }
    </div>
</body>
</html>
